{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Companion Cube",
  "version": "0.1.1",
  "identifier": "com.companion-cube.app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Companion Cube",
        "width": 960,
        "height": 600,
        "minWidth": 520,
        "minHeight": 520,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "skipTaskbar": false,
        "theme": "Dark",
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
